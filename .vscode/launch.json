{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
        "version": "0.2.0",
        "configurations": [
            // Flask (Python) configuration
            {
                "name": "Python: Flask",
                "type": "python",
                "request": "launch",
                "program": "${workspaceFolder}/chess-service/app.py",  // Adjust this to point to your Flask app file
                "args": [
                    "run"
                ],
                "env": {
                    "FLASK_APP": "${workspaceFolder}/chess-service/app.py",  // Ensure this matches your app file
                    "FLASK_ENV": "development"
                },
                "jinja": true,
                "console": "integratedTerminal",
                "justMyCode": true
            },
    
            // React (Chrome) configuration
            {
                "type": "chrome",
                "request": "launch",
                "name": "Launch Chrome against localhost",
                "url": "http://localhost:3000",  // Your React dev server URL
                "webRoot": "${workspaceFolder}/chess-app/src"  // Adjust this to your React source folder
            }
        ],
    
        // Compound configuration to run both Flask and React
        "compounds": [
            {
                "name": "Flask and React",
                "configurations": ["Python: Flask", "Launch Chrome against localhost"]
            }
        ]
    }
    